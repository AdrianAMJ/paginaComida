<div class="container mt-4">
  <h1 class="display-3 mb-4">Registrarse</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col">
        <%= f.label :name, "Nombre", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <br/>
    <div class= "row">
      <div class="col">
        <%= f.label :email, "Correo", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="col">
        <%= f.label :phone, "Telefono", class: "form-label" %>
        <%= f.number_field :phone, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col">
        <%= f.label :password, "ContraseÃ±a", class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="col">
        <%= f.label :password_confirmation, "Confirmar ContraseÃ±a", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="actions mt-3">
      <%= f.submit "Sign up", class: "btn btn-primary mt-4 mb-4" %>
    </div>
  <% end %>
    <%= render "devise/shared/links" %>
</div>
