<div class="container mt-4">
  <h1 class="display-3 mb-4">Iniciar Sesi√≥n</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
    <br/>
    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me, class: "form-check-input"%>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-danger mt-4" if msg.is_a?(String) %>
    <%- end -%>  

    <div class="actions mt-4 mb-3">
      <%= f.submit "Ingresar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
