<div class="modal-header background-color3 ">
  <h4 class="modal-title" id="myModalLabel">Añadir Producto</h4>
</div>
<%= form_for :product, url: products_path  do |f|%>
  <div class="modal-body background-color2">
    <div>
      <%= f.label :name, class: "form-label" %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <br/>
    <div>
      <p class="form-label"> Categoría </p>&nbsp;
      <%= f.radio_button :category, 'Entrada'%>
      <%= f.label :category, "Entrada", :value => 'Entrada', class: "form-label"%><br/>&nbsp;
      <%= f.radio_button :category, 'Plato Principal'%>
      <%= f.label :category, "Plato Principal", :value => 'Plato Principal', class: "form-label"%><br/>&nbsp;
      <%= f.radio_button :category, 'Postre'%>
      <%= f.label :category, "Postre", :value => 'Postre', class: "form-label"%>
    </div>

    <div>
      <%= f.label :description, class: "form-label" %><br>
      <%= f.text_area :description, class: "form-control", rows: 3, cols: 40 %>
    </div>

    <div>
      <%= f.label :price, class: "form-label" %><br>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div>
      <%= f.label :photo_url, class: "form-label" %><br>
      <%= f.text_field :photo_url, class: "form-control" %>
    </div>

  </div>

  <div class="modal-footer background-color3">
    <%= f.submit "Añadir Producto", class: "btn btn-warning" %>
  </div>
<% end %>


