<div class="modal-header background-color3 ">
  <h4 class="modal-title" id="myModalLabel">Editar Producto</h4>
</div>
<%= form_for product, url: product_update_path(product.id), :method => :put  do |f|%>
  <div class="modal-body background-color2">
    <div>
      <%= f.label :name, Product.human_attribute_name(:name), class: "form-label" %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <br/>
    <div>
      <p class="form-label"> <%= Product.human_attribute_name(:category) %> </p>&nbsp;
      <%= f.radio_button :category, 'Entrada'%>
      <%= f.label :category, "Entrada", :value => 'Entrada', class: "h6"%><br/>&nbsp;
      <%= f.radio_button :category, 'Plato Principal'%>
      <%= f.label :category, "Plato Principal", :value => 'Plato Principal', class: "h6"%><br/>&nbsp;
      <%= f.radio_button :category, 'Postre'%>
      <%= f.label :category, "Postre", :value => 'Postre', class: "h6"%>
    </div>
    <br/>
    <div>
      <%= f.label :description, Product.human_attribute_name(:description), class: "form-label" %><br>
      <%= f.text_area :description, class: "form-control", rows: 3, cols: 40 %>
    </div>

    <div>
      <%= f.label :price, Product.human_attribute_name(:price), class: "form-label" %><br>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div>
      <%= f.label :photo_url, Product.human_attribute_name(:photo_url), class: "form-label" %><br>
      <%= f.text_field :photo_url, class: "form-control" %>
    </div>

  </div>

  <div class="modal-footer background-color3">
    <%= f.submit "Editar Producto", class: "btn btn-warning" %>
  </div>
<% end %>


